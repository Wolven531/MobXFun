{
	"compilerOptions": {
		"allowJs": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"module": "commonjs",
		"target": "esnext",
		"outDir": "build",
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	],
	"compileOnSave": true,
	"typeAcquisition": {
		"enable": true
	}
}
